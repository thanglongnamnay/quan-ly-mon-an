<!DOCTYPE html>
<html>
  <%- include('partials/js'); -%>
  <%- include('partials/head'); -%>
  <body class="container-fluid">
    <div class="jumbotron">
      <%- include('partials/header'); %>
      <% var cardClass = 'card text-left col-12 col-md-4 col-lg-3 p-0' %>
      <div class="row">
        <% productList.forEach(function(product) { %>
          <div class="col-12 col-md-4 col-lg-3 mb-2 p-2">
            <div class="card text-left w-100 h-100" style="width: 12rem">
              <div class="card-body">
                <h4 class="card-title"><%- product.name %></h4>
                <p class="card-subtitle mb-2 text-muted"><%- product.price %>đ</p>
                <p class="card-text"><%- product.ingredient %></p>
                <p class="card-text"><%- product.recipe %></p>
              </div>
              <div class="card-footer">
                <a href="/product/<%- product.id %>" class="btn btn-success mb-1 w-100">Chi tiết</a>
                <% if (userID > 0 && !isAdmin) { -%>
                  <div class="btn btn-primary w-100 chooseProductButton" id="chooseProductButton-<%- product.id %>">Chọn món này</div>
                <% } else if (userID > 0) { -%>
                  <div class="btn-group w-100">
                    <a href="/product/edit/<%- product.id %>" class="btn btn-primary w-100" id="checkboxButton<%- product.id %>">Sửa</a>
                    <a href="/product/delete/<%- product.id %>" class="btn btn-danger w-100" id="checkboxButton<%- product.id %>">Xoá</a>
                  </div>
                <% } -%>
              </div>
            </div>
          </div>
        <% }); %>
        <% if (isAdmin) { -%>
          <div class="card text-left col-12 col-md-4 col-lg-3 p-0">
            <a href="/product/add" class="btn btn-primary btn-lg">Thêm sản phẩm</a>
          </div>          
        <% } -%>
      </div>
    </div>
    <script defer src="/javascripts/chooseProductButton.js"></script>
  </body>
</html>
